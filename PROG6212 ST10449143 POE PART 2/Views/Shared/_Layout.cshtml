@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Contract Monthly Claim System (CMCS)</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
        }

        .sidebar {
            width: 220px;
            background-color: #2C3E50;
            height: 100vh;
            padding: 20px 10px;
            color: white;
        }

            .sidebar h2 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 30px;
            }

            .sidebar a {
                display: block;
                margin: 10px 0;
                padding: 12px;
                background: #34495E;
                color: white;
                text-decoration: none;
                border-radius: 6px;
                text-align: center;
            }

                .sidebar a:hover {
                    background: #1ABC9C;
                }

        .content {
            flex: 1;
            padding: 30px;
            background: #ECF0F1;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>CMCS</h2>
        <a asp-controller="Home" asp-action="Index">Home</a> 
        <a asp-controller="Claims" asp-action="Submit">Submit Claim</a>
        <a asp-controller="Claims" asp-action="ViewClaims">View Claims</a>
        <a asp-controller="Claims" asp-action="Approvals">Approvals</a>
        <a asp-controller="Claims" asp-action="UploadDocs">Upload Documents</a>
        <a asp-controller="Claims" asp-action="TrackStatus">Track Status</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
