@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="p-5 bg-light shadow rounded-3">
        <h1 class="display-4 text-primary fw-bold">Contract Claim Management System (CCMS)</h1>
        <p class="lead text-muted mt-3">
            Welcome to CCMS, a streamlined platform for managing lecturer contract claims efficiently.
            Submit claims, track progress, and ensure fast approvals with full transparency.
        </p>

        <hr class="my-4">

        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <i class="fas fa-file-invoice-dollar fa-3x text-primary mb-3"></i>
                        <h5>Submit Claims</h5>
                        <p class="text-muted">Lecturers can quickly submit their claims with supporting documents anytime.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5>Approvals</h5>
                        <p class="text-muted">Programme Coordinators and Academic Managers can review and approve claims easily.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <i class="fas fa-tasks fa-3x text-info mb-3"></i>
                        <h5>Track Status</h5>
                        <p class="text-muted">Track the status of your claims transparently from submission to settlement.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
