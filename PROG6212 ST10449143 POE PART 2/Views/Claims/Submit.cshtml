@model PROG6212_ST10449143_POE_PART_1.Models.ClaimViewModel
@{
    ViewData["Title"] = "Submit Monthly Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3 rounded-top">
                    <h2 class="h4 mb-0 text-center">
                        <i class="fas fa-file-invoice-dollar me-2"></i>Submit Monthly Claim
                    </h2>
                </div>
                <div class="card-body p-4">

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Submit" method="post" id="claimForm">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LecturerName" class="form-label fw-semibold">Lecturer Name *</label>
                                <input asp-for="LecturerName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="LecturerName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Month" class="form-label fw-semibold">Claim Month *</label>
                                <select asp-for="Month" asp-items="new SelectList(Model.AvailableMonths)" class="form-select">
                                    <option value="">-- Select Month --</option>
                                </select>
                                <span asp-validation-for="Month" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked *</label>
                                <div class="input-group">
                                    <input asp-for="HoursWorked" class="form-control" placeholder="0.0" min="0" step="0.5" />
                                    <span class="input-group-text">hours</span>
                                </div>
                                <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate *</label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="HourlyRate" class="form-control" placeholder="0.00" min="0" step="0.01" />
                                </div>
                                <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AdditionalNotes" class="form-label fw-semibold">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="4"
                                      placeholder="Add any additional information about your claim (optional)"></textarea>
                            <span asp-validation-for="AdditionalNotes" class="text-danger small"></span>
                        </div>

                        <div class="bg-light p-3 rounded-2 mb-4" id="calculationPreview">
                            <h6 class="fw-semibold text-primary mb-2">Claim Summary</h6>
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <small class="text-muted">Hours</small>
                                    <div class="fw-bold fs-5" id="hoursPreview">0</div>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Rate</small>
                                    <div class="fw-bold fs-5" id="ratePreview">R 0.00</div>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Total</small>
                                    <div class="fw-bold fs-5 text-success" id="totalPreview">R 0.00</div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="reset" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-redo me-1"></i>Clear Form
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Real-time calculation 
        function updateCalculationPreview() {
            const hours = parseFloat(document.getElementById('HoursWorked').value) || 0;
            const rate = parseFloat(document.getElementById('HourlyRate').value) || 0;
            const total = hours * rate;

            document.getElementById('hoursPreview').textContent = hours.toFixed(1);
            document.getElementById('ratePreview').textContent = 'R ' + rate.toFixed(2);
            document.getElementById('totalPreview').textContent = 'R ' + total.toFixed(2);
        }

        document.getElementById('HoursWorked').addEventListener('input', updateCalculationPreview);
        document.getElementById('HourlyRate').addEventListener('input', updateCalculationPreview);

        document.addEventListener('DOMContentLoaded', updateCalculationPreview);
    </script>
}