@{
    ViewData["Title"] = "Track Claim Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <h2 class="text-center text-info mb-4">
                <i class="fas fa-tasks"></i> Track Claim Status
            </h2>

            <div class="list-group">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Claim Submitted
                    <span class="badge bg-success rounded-pill"><i class="fas fa-check"></i></span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Under Review
                    <span class="badge bg-warning rounded-pill"><i class="fas fa-spinner fa-spin"></i></span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Approved
                    <span class="badge bg-secondary rounded-pill"><i class="fas fa-clock"></i></span>
                </div>               
            </div>
        </div>
    </div>
</div>
